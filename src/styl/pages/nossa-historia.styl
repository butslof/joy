@import '../global-variables'
@import '../globals-sections/section-intro-int'

#nossa-historia
    #section-sobre  
        margin-bottom 44px
        .col-img
            img 
                width 943px
                height 450px 
                object-fit cover 
                margin-left -380px 
        .col-text 
            padding-left 22px 
            p
                margin-bottom 35px 
                &:last-child 
                    margin-bottom 0   
            img 
                @media screen and (min-width: mobile-min) and (max-width: tablet-max)  
                    margin-top -18px
                    margin-bottom 19px 
                    height 203px 
                    object-fit cover 
                    border-radius 10px
    #detalhes-que-fazem 
        margin-bottom 30px
        .col-cards 
            @media screen and (min-width: desktop-min) 
                display flex 
                gap 22px
            .box 
                width 239px
                height 158px 
                background-color branco 
                border 1px solid #eee
                border-radius 6px 
                text-align center 
                padding-top 26px 
                padding-left 7px 
                padding-right 7px 
                padding-bottom 26px  
                
                img 
                    margin-bottom 10px
                .title 
                    font-size 16px
                    font-weight weight-strong 
                    color primaryColor  
                    margin-bottom 3px 
                    text-transform uppercase  
        .splide__arrows 
            @media screen and (min-width: mobile-min) and (max-width: tablet-max)  
                bottom -188px 
        .splide__slide 
            @media screen and (min-width: mobile-min) and (max-width: tablet-max)   
                width 239px !important
                margin-right 22px
    #section-galeria 
        margin-bottom 83px
        .line
            max-width 1156px
            margin-left 7px

        .col-galeria 
            padding 0px
        .box 
            display flex
            gap 15px
            img 
                object-fit cover
        .box-1
            margin-bottom 15px
            img 
                width 755px
                height 495px 
                object-fit cover 
        .box-2 
            img 
                width 370px
                height 240px 
        .box-3 
            margin-bottom 15px
            img 
                width 370px 
                height 240px 
        .box-4 
            img 
                width 370px 
                height 495px  
        .splide-galeria 
            padding 0
            margin-top 49px
            img 
                width 265px
                height 203px 
                object-fit cover 
                border-radius 10px 
             .splide__slide  
                width 265px !important 
                margin-right 15px 
            .splide__arrows 
                bottom -233px

    #ideias
        margin-bottom 72px
        @media screen and (min-width: mobile-min) and (max-width: tablet-max)  
            margin-bottom 35px
        .line-cards 
            margin-top 29px
            .box 
                width 360px
                height 423px
                background-color primaryColor 
                border-radius 6px 
                text-align center 
                padding-top 34px 
                margin 0 auto
                padding-left 28px 
                padding-right 28px 
                padding-bottom 34px 
                @media screen and (min-width: mobile-min) and (max-width: tablet-max)  
                    width 100% 
                    margin-bottom 19px 
                    height auto 
                    padding-left 17px
                    padding-right 17px
                .title 
                    color secundaryColor 
                    font-size 26px 
                    font-weight weight-strong 
                    margin-bottom 12px
                img 
                    margin-bottom 21px 
                p, li
                    color branco 
                ul 
                    list-style-type none 
                    text-align left 
                    padding 0 
                    margin 0
                    li 
                        display flex 
                        gap 9px 
                        margin-bottom 25px

                