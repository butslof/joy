@import '../global-variables'
@import '../globals-sections/section-intro-int'  
@import '../globals-sections/produtos-relacionados'  
@import '../globals-sections/texto-apoio' 
@import '../globals-sections/maps-iframe'

#seo-local
    #section-intro 
        margin-bottom 70px
        @media screen and (min-width: mobile-min) and (max-width: tablet-max)   
            margin-bottom 56px
    
    #section-content-full 
        .col-img 
            img 
                border-radius 6px 
                width 549px 
                height 385px 
                object-fit cover 
                @media screen and (min-width: mobile-min) and (max-width: tablet-max)   
                    width 100% 
                    height 203px 
        .line-centered  
            margin-bottom 65px  
            @media screen and (min-width: mobile-min) and (max-width: tablet-max)  
                margin-bottom 46px
            .col-text 
                padding-right 23px
    #section-cartao-bndes 
        @media screen and (min-width: desktop-min) 
            margin-top 150px

    #section-iframe 
        .line-iframe 
            iframe
                height 384px !important 
                @media screen and (min-width: mobile-min) and (max-width: tablet-max)  
                    height 517px !important 
    #outras-atuacoes
        margin-bottom 75px
        @media screen and (min-width: mobile-min) and (max-width: tablet-max)  
            margin-bottom 43px
        .line-intro 
            margin-bottom 19px 
        .splide__track
            
            padding-bottom 35px 
            @media screen and (min-width: desktop-min) 
                padding-top 35px
        .splide__slide
            @media screen and (min-width: mobile-min) and (max-width: tablet-max)  
                margin-right 46px 
        .splide__arrows 
            @media screen and (min-width: mobile-min) and (max-width: tablet-max)  
                bottom -488px
                
