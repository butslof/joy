// @import '../global-variables'
.header-shadow 
    header 
        box-shadow 0 .5rem 1rem rgba(0,0,0,.15)!important

header  
    padding-bottom 16px
    padding-top 22px
    background branco
    max-width 1920px 
    margin 0 auto 

    .faixa-top 
        background-color primaryColor
        padding-bottom 8px 
        padding-top 8px
        margin-bottom 20px

        .column-items
            display flex
            justify-content space-between  
            * 
                color branco
                font-size 13px 

            a 
                margin-left 11px
                i 
                    font-size 16px 
                    margin-right 4px 
                    color secundaryColor  
            .divisor-faixa-top 
                margin-left 11px 
                background tertiaryColor
                padding 1px
            .extra-bold 
                font-weight weight-extra
    .dropdown-toggle::after{
        content url(../imgs/icons/arrow-menu.svg)
        border none
        position absolute
        margin-top -1px 
        color tertiaryColor !important
    } 
    #multiCollapseExample1 
        position absolute
        margin-top 18px
        margin-left -82px
    .dropdown-divider 
        margin 0 !important
    .navbar-nav li:hover .dropdown-menu {
        display block
        background-color branco
        transition 1s !important  
    }
    .dropdown-item:focus, .dropdown-item:hover{
        color primaryColor 
        background-color branco 
    }
    .dropdown-toggle::after{
        color tertiaryColor !important
    }
    .dropdown-item 
        padding-left 12px  !important
        padding-right 12px !important
        margin-left 0px !important
        font-size 12px
        color primaryTextColor
        font-weight 400 
        margin-bottom 13px
        &:hover
            color primaryColor !important 
        i 
            font-size 11px 
            color secundaryColor
    .navbar 
        .navbar-nav 
            position absolute
            right 0px
            margin-top 47px

            .nav-link
                font-size 14px
                color tertiaryColor
                font-weight weight-strong
                margin-right 19px
                padding-right 0px !important
                padding-left 0px !important  
                text-transform uppercase
                &:hover 
                    color primaryColor 

            .divisor-link-nav 
                background #edf2f7
                width 1px
                height 15px
                margin-top -27px
                float right
                display block
                
            .divisor-c-drop
                margin-right -10px
        

            .btn-lupa-header 
                background transparent 
                border none  
            .button-search
                margin-top 5px
            .button-whatsapp
                width 140px
                height 45px

    /* Small only */
    @media screen and (min-width: 320px) and (max-width: 63.9375em)  
        padding-top 17px
        padding-bottom 0px
        height 85px 
        .dropdown-toggle::after{
            margin-left 10px
            
        }
        .divisor-link-nav 
            display none !important
        .dropdown-menu 
            border none !important
            background-color transparent
            padding-left 13px 
        
        .logo-header 
            z-index 999
            position absolute
            left 13px
            margin-top -2px
  
        .navbar 
            .navbar-nav  
                margin-top 58px
                position revert !important 
                text-align left !important 
                width 100%
                a 
                    font-size 16px 
                .nav-link 
                    font-weight weight-medium
                    margin-bottom 0px
                    font-size 16px
                .button 
                    margin-bottom 10px 
                .nav-item 
                    border-bottom 1px solid #959595 
                    margin-top 10px 
                .dropdown
                    border-bottom 1px solid #959595
                    margin-top 10px 
                    .dropdown-item 
                        border-bottom 1px solid #959595 
                        padding-left 0px !important 
                        color primaryGrayColor !important

            .box-infos 
                font-size 14px 
                margin-top 35px
                * 
                    font-size 14px !important    
                    color primaryTextColor !important
                .box 
                    margin-bottom 21px
                
                .box, a 
                    display flex 
                    
                    i 
                        font-size 23px !important
                        color secundaryColor !important
                        margin-right 7px 
                        width 22px  
            .title-redes 
                font-weight weight-normal 
                margin-bottom 8px 
                display block
            .box-redes 
                display flex 
                gap 10px 
                margin-bottom 28px
                a 
                    background-color secundaryColor 
                    border-radius 3px  
                    width 30px 
                    height 30px 
                    display flex 
                    align-items center  
                    justify-content center 
                 
                    i 
                        color branco 
        .hamb
            width 26px
            height 21px
            position absolute
            top 2px
            bottom 0
            right 22px
            margin auto
            z-index 9999
            margin-top 31px

            &:before
                content ""
                width 100%
                height 3px
                background primaryColor
                box-shadow 0 9px 0 0 primaryColor,
                            0 18px 0 0 primaryColor
                display block
                transition .3s all
    
            &:after
                content ""
                width 3px
                height 3px
                position absolute
                bottom 0
                left 5px
                background primaryColor
                transition .3s all
    
            &.open-hamb
                display flex
                align-items center

                &:before
                    transform rotate(45deg)
                    box-shadow unset
                    background primaryColor
                
                &:after
                    width 100%
                    left 0
                    top 0
                    bottom 0
                    margin auto
                    transform rotate(-45deg)
                    background primaryColor
        .container-menu-aberto 
            background darkGray
            display block !important
            position absolute
            width 100%
            left 0
            height 100vh
            transition .5s all
            top 0 
            padding 0
            nav 
                height inherit
                background branco
                transition .3s all
                max-width 100%
                padding-top 52px
                padding-left 0px
                overflow auto
                ul 
                    display block  !important
                .box-redes-sociais-header
                    left 9px  
            .navbar-collapse
                position absolute !important
                top 41px
                margin-left 15px 
            .collapse 
                display block !important   
            #navbarNav 
                width 90%
            .final-mob 
                margin-top 49px
                padding-left 20px
                padding-right 20px
                margin-bottom 29px
                p 
                    color branco 
                    font-weight bold 
                    strong  
                        color branco  
                .button-transparent 
                    background lightGreen
                    color branco 
                    margin 0 auto
                    i 
                        color branco !important 
                .box-contatos 
                    
                    a 
                        display flex
                        font-size 14px 
                        color branco  
                        margin-bottom 16px
                        gap 9px 
                        i 
                            font-size 20px 
                            color primaryColor
    /* Large and up */
    @media screen and (min-width: 64em) 
        padding-top 0
        .logo-header 
            width initial
        .button-white 
            margin-right 10px !important
        .navbar 
            .navbar-nav 
                .button 
                    margin-top -5px
                    margin-left 40px   

        .dropdown-menu 
            overflow auto
            min-width 244px !important
            overflow-x hidden 
        .dropdown-item  
            padding-top 0
            height fit-content
            margin-bottom 0px
        .dropdown  
            margin-right 17px 
        .box-redes-desk  
            .item-margin
                margin 0 !important 
        .navbar-nav li:hover .dropdown-menu {
            background-color branco
            border-bottom 5px solid secundaryColor
            display grid
            padding-left 12px
            grid-template-columns repeat(2, 1fr)
            padding-right 20px
        }



