#thumbnail-slider
    .splide__slide 
        opacity 0.3
        border-radius 6px
        img 
            width 100%
            height auto 
            border-radius 6px 
    .splide__slide.is-active 
        opacity 1
    .splide__track--nav>.splide__list>.splide__slide.is-active 
        border: 2px solid #CCCCCC;
            
#main-slider 
    margin-bottom 11px
    img 
        width 100% 
        height 421px 
        object-fit cover 
        border-radius 6px 
        @media screen and (min-width: mobile-min) and (max-width: tablet-max)    
            width 100% 
            height 215px