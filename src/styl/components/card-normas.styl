.card-norma 
    width 270px
    height 290px
    border-radius 6px
    background branco
    box-shadow 0px 3px 16px rgba(0, 0, 0, 0.16) 
    padding-left 20px 
    padding-right 20px 
    padding-top 25px  
    position relative 
    margin-bottom 20px

    @media screen and (min-width: mobile-min) and (max-width: tablet-max)    
        text-align left 
        margin 0 auto 
        margin-bottom 20px  
        height auto
        padding-bottom 43px
        min-height 329px
    img 
        margin-bottom 9px 
    .title 
        font-size 14px 
        font-weight weight-extra  
        color primaryColor 
    .link 
        position absolute
        bottom 22px 
        font-size 13px 
        color secundaryColor 
        font-weight weight-strong 
        text-decoration underline
 