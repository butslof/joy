.card-component-one 
    width 350px
    height 400px
    border-radius 6px
    background branco
    border 1px solid #ccc
    box-shadow 0px 3px 33px rgba(0, 0, 0, 0.2) 
    position relative 
    margin 0 auto
    margin-bottom 39px 
    /* Small only */
    @media screen and (min-width: mobile-min) and (max-width: tablet-max)    
        width 100% 
        height auto 
        padding-bottom 28px 
        
    .bg 
        border-radius 6px 6px 0px 0px
        background linear-gradient(rgba(1, 17, 17, 0) 0%, #0f131a 100%) 
        width 100%
        height 200px 
        position absolute 
        top 0 
        /* Small only */
        @media screen and (min-width: mobile-min) and (max-width: tablet-max)   
            width 100%
    img 
        object-fit cover
        border-radius 6px 6px 0px 0px
        width 100%
        height 200px   
        /* Small only */
        @media screen and (min-width: mobile-min) and (max-width: tablet-max)     
            width 100%
    .content 
        padding-left 22px 
        padding-right 22px 
        padding-top 25px 
        /* Small only */
        @media screen and (min-width: mobile-min) and (max-width: tablet-max)     
            text-align left
        .title 
            font-size 18px 
            font-weight weight-extra  
            color primaryColor 
            text-transform uppercase
        .link 
            color secundaryColor 
            text-decoration underline !important
            font-size 13px 
            font-weight weight-strong